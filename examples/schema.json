{
	"name": "contact_us",
	"fields": {
		"name": {
			"type": "name",
			"name": "name",
			"optional": false,
			"value": null,
			"min": 1,
			"max": 255,
			"fields": []
		},
		"contact_method": {
			"type": "enum",
			"name": "contact_method",
			"optional": false,
			"value": null,
			"one_of": [
				"email",
				"phone"
			],
			"fields": []
		},
		"email_address": {
			"type": "email_address",
			"name": "email_address",
			"optional": false,
			"value": null,
			"format": "basic",
			"min": 3,
			"max": 254,
			"allowed_domains": [],
			"disallowed_domains": [],
			"fields": []
		},
		"phone_number": {
			"type": "phone_number",
			"name": "phone_number",
			"optional": false,
			"value": null,
			"fields": []
		},
		"message": {
			"type": "text",
			"name": "message",
			"optional": false,
			"min": 10,
			"max": 500,
			"pattern": null,
			"value": null,
			"fields": []
		}
	},
	"rules": [
		{
			"when": {
				"type": "equals",
				"target": "#\/fields\/contact_method\/value",
				"expected": "email"
			},
			"then": [
				{
					"action": "make_optional",
					"field": "#\/fields\/phone_number"
				}
			]
		},
		{
			"when": {
				"type": "all_of",
				"conditions": [
					{
						"type": "equals",
						"target": "#\/fields\/contact_method\/value",
						"expected": "phone"
					}
				]
			},
			"then": [
				{
					"action": "make_optional",
					"field": "#\/fields\/email_address"
				}
			]
		}
	]
}
