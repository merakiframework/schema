{
	"name": "contact_form",
	"fields": {
		"name": {
			"type": "name",
			"default_value": null,
			"value": null,
			"required": true
		},
		"contact_method": {
			"type": "enum",
			"default_value": null,
			"value": null,
			"required": true,
			"one_of": [
				"email",
				"phone"
			]
		},
		"message": {
			"type": "text",
			"default_value": null,
			"value": null,
			"required": true,
			"min": 10,
			"max": 500,
			"multiline": true
		},
		"email_address": {
			"type": "email_address",
			"default_value": null,
			"value": null
		},
		"phone_number": {
			"type": "phone_number",
			"default_value": null,
			"value": null
		},
		"credit_card": {
			"type": "credit_card",
			"optional": false,
			"inputs": [
				{
					"name": "number",
					"type": "text",
					"pattern": "^[0-9]$",
					"min": 15,
					"max": 16
				},
				{
					"name": "expiration_date",
					"type": "text",
					"min": 4,
					"max": 4,
					"pattern": "^(0[1-9]|1[0-2])([0-9]{2})$"
				},
				{
					"name": "security_code",
					"type": "text",
					"optional": false,
					"min": 3,
					"max": 4
				}
			]
		}
	},
	"rules": [
		{
			"when": {
				"group": "all",
				"conditions": [
					{
						"target": "#\/fields\/contact_method\/value",
						"operator": "equals",
						"expected": "email"
					}
				]
			},
			"then": [
				{
					"action": "require",
					"target": "#\/fields\/email_address"
				},
				{
					"action": "set",
					"target": "#\/fields\/phone_number\/required",
					"to": false
				}
			]
		},
		{
			"when": {
				"group": "all",
				"conditions": [
					{
						"target": "#\/fields\/contact_method\/value",
						"operator": "equals",
						"expected": "phone"
					}
				]
			},
			"then": [
				{
					"action": "require",
					"target": "#\/fields\/phone_number"
				},
				{
					"action": "set",
					"target": "#\/fields\/email_address\/required",
					"to": false
				}
			]
		}
	]
}
